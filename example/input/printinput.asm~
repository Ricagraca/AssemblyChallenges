        section .text

        ; Export the entry point to the ELF linker or loader.  The conventional
        ; entry point is "_start". Use "ld -e foo" to override the default.
        global _start

        section .bss                

        section .text

        ; int main, entry point:
        _start:

	;; Read a integer to variable a 
	call read_integer
	call read_integer
	call print_sum

	;; Read a integer to variable b 
	
        mov edx,1   ;message length
        mov eax,4   ;system call number (sys_write)
        int 0x80    ;call kernel

        mov ebx,0   ;process' exit code
        mov eax,1   ;system call number (sys_exit)
        int 0x80    ;call kernel - this interrupt won't 
	ret
	
        section .data 	;length of our dear string

	a DD 48
	b DD 0

	read_integer:
	mov edx, [a]
	add edx, 1
	mov [a], edx
	ret
	
	print_sum:
	mov byte [a+1], 10
        mov edx,2   ;message length
        mov ecx,a   ;message 
        mov eax,4   ;system call number (sys_write)
        int 0x80    ;call kernel
	ret 
